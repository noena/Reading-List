<h1>Julienne's Reading List</h1>
<br>
<li>
<%= link_to 'Add New Book', new_book_path %>
<%= render 'devise/menu/login_items' %>
</li>
<p></p>
<br>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Read</th>
    <th colspan="3"></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><% if book.read_book %>
              <p>Yes</p>
          <% else %>
              <p>Soon</p>
          <% end %>
      </td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit Details', edit_book_path(book) %></td>
      <td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
